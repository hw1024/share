/**index.wxss**/
.share-top {
	display: -webkit-box;
    display: -webkit-flex;
    display: flex;
	padding: 60rpx 15rpx;
	margin: 0 20rpx;
	font-size: 20rpx;
	border-bottom: 2rpx solid #b9b9b9;
}

.share-top__item {
	display: -webkit-box;
    display: -webkit-flex;
    display: flex;
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;  
}
.share-top__item .user-info__avatar {
	width: 60rpx;
	height: 60rpx;
	margin-right: 15rpx;
	border-radius: 60rpx;
}
.share-top__item .user-info__message {
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1; 
}
.share-top__item .user-info__message .user-info__nickname {
	display: block;
}
.share-top__btn {
	justify-content: center;
	align-items: center;
	background: #ffbf00;
	text-align: center;
	margin-left: 10rpx;
	border-radius: 8rpx;
}

.share-top__btn .share-top__btn_img {
	width: 40rpx;
	height: 40rpx;
}
.share-top__btn .share-top__btn_txt {
	
}
.share-top__btn .share-top__btn_icon {
	width: 30rpx;
	height: 20rpx;
}
.swiper-container {
	margin:0 auto;
	position:relative;
	height: auto;
}
.swiper_box {
	height:342rpx;
	overflow: hidden;
}
.slide-image {
	width: 100%;
	height: 342rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: -100rpx; 
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{
	width: 80rpx; 
	height:80rpx;
	border-radius: 10rpx;
	margin-right: 20rpx;
}
.swiper-container .dots .dot.active{
	width: 76rpx; 
	height:76rpx;
	border:2rpx solid red;
}
.swiper-container .dots .dot.active .dot-image{
	width: 76rpx; 
	height:76rpx;
}
.swiper-container .dots .dot .dot-image{
	width: 80rpx; 
	height:80rpx;
	border-radius: 10rpx; 
}
.dots-l, .dots-r{
	position: absolute;
	top: 50%;
	width: 40rpx;
	height: 60rpx;
	margin-top: -30rpx;
}
.dots-l{
	left: 10rpx;
}
.dots-r{
	right: 10rpx;
}

.swiper-container .swiper-info, .swiper-container .swiper-pager {
	position: absolute;
	right:0;
	z-index: 1;
	padding:0 20rpx;
	height:80rpx;
	border-radius:6rpx;
	background:rgba(0,0,0,.3);
	color:#fff;
	text-align:center;
	line-height:80rpx;
	font-size:24rpx;
}
.swiper-container .swiper-info {
	top:0;
}
.swiper-container .swiper-pager {
	bottom:0;
}
