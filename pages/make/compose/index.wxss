/**index.wxss**/
.compose-front, .compose-after {
  padding: 28rpx 0;
}
.compose-after {
  text-align: center;
}
.compose-box {
	width: 600rpx;
	height: 750rpx;
	margin: 0 auto 24rpx;
  position: relative;
  text-align: center;
}
.compose-box__txt {
  width: 440rpx;
  font-size: 24rpx;
  margin: 0 auto;
  padding-top: 160rpx;
}
.compose-box__txt_btn {
  font-size: 20rpx;
  margin-top: 30rpx;
}
.compose-box__info {
  position: absolute;
  bottom: 60rpx;
  right: 30rpx;
  text-align: right;
  font-size: 24rpx;
}
.compose-info__image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.compose-info__nickname {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
}
.compose-select__title {
  width: 600rpx;
  margin:0 auto;
}
.compose-select__list {
  
  margin: 24rpx 40rpx 0 80rpx;
}
.scroll-view__box {
  height: 200rpx;
  white-space: nowrap;
  display: flex;
}
.scroll-view__item {
  width: 160rpx;
  height:200rpx;
  display: inline-block;
  margin-left: 40rpx;
}
.compose-btn {
  width: 90%;
  margin-top: 18px;
  background: #ff6c00!important;
}

.compose-canvas {
  width: 300px; 
  height: 485px; 
  margin: 100rpx auto;
}
.compose-after__image {
  width: 600rpx;
  height: 970rpx;
  margin: 0 auto;
}
.compose-after__btn {
  margin:40rpx 40rpx 0;
  font-size: 28rpx;
  display:flex;
  justify-content: space-between;
}
.compose-after__btn_keep {
  margin: 0;
  width: 320rpx;
  color: #ff6c00;
}
.compose-after__btn_share {
  margin: 0;
  width: 320rpx;
  color: #fff;
  background: #ff6c00;
}