/**index.wxss**/
.eran-info {
	padding: 40rpx 20rpx 20rpx;
	font-size: 26rpx;
	background: #fff;
	position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.eran-info .eran-info__hd {
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    margin-left: 160rpx;
}
.eran-info .eran-info__bd {

}
.eran-info .eran-info__avatar {
	position: absolute;
	left: 20rpx;
	bottom: -45rpx;
	width: 150rpx;
	height: 150rpx;
	z-index: 1;
}
.eran-info .eran-info__avatar .avatar-image {
	width: 150rpx;
	height: 150rpx;
}
.eran-obtain, .eran-raiders, .eran-list{
	margin-top: 20rpx;
	background: #fff;
}
.eran-obtain .eran-obtain__data{
	position: relative;
	overflow: hidden;
}
.eran-obtain .eran-obtain__data .data-info{
	position: absolute;
	top: 0;
	right: 0;
	z-index: 1;
	padding:0 20rpx;
	height:80rpx;
	border-radius:6rpx;
	background:rgba(0,0,0,.3);
	color:#fff;
	text-align:center;
	line-height:80rpx;
	font-size:24rpx;
}
.eran-obtain .eran-obtain__data .data-image{
	width: 100%;
	vertical-align: top;
}
.eran-obtain .weui-cells::before {
	border-top: none;
}
.eran-form{
	text-align: center;
	margin-top: 20rpx;
	padding: 30rpx 0;
	font-size: 26rpx;
	background: #fff;
}
.eran-form .weui-btn{
	width: 70%;
	margin-bottom: 20rpx;
}
.eran-raiders .weui-cells::before {
	border-top: none;
}
.eran-raiders .weui-cells::after {
	border-bottom: none;
}
.eran-list .eran-list__title{
	font-size: 28rpx;
	line-height: 80rpx;
	border-bottom: 1px solid #D9D9D9;
}