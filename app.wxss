@import 'assets/style/prompt.wxss';
@import 'assets/style/public.wxss';
.weui-container {
  height: 100%;
  box-sizing: border-box;
} 
.weui-copyright{
	position: absolute;
	bottom: 20rpx;
	width: 100%;
	display: flex;
    justify-content: center;
}
.weui-copyright .weui-copyright__txt{
	color: #A4A4A4;
	font-size: 24rpx;
}
.stv-container {
position:fixed;
top:0;
left:0;
right:0;
bottom:0;

}

.topbar {
    margin-top: 0;
    background: #fff;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 9999;
    display: flex;
}
.topbar .weui-flex__item{
  text-align: center;
}
.topbar .topbar-item {
    color: #333;
    display: inline-block;
    text-align: center;
    padding: 10px 0;
    position: relative;
}

.topbar .topbar-item.active {
  color: #f9f900;
}
.topbar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #f9f900;
}
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.scroll-view {
  position: relative;top: 45px;
  width: 100%;
  height: 100%;
  background: #FFF;
}
.scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}
.scroll-view-wrapper .one-scene {
  height: 100%;
}
.one-scene text {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
}
.topbar .topbar-item.active:after{
  content: "";
  width: 100%;
  height:1px;
  background-color: #f9f900;
  position: absolute;
  bottom: 0;
  left:0; 
  right:0;

}


.private-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.private-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
  text-align: center;
}
.private-dialog__title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.private-dialog__content {
  padding: 50rpx 32rpx;
}
.private-dialog__footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.private-dialog__btn_cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.private-dialog__btn_confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.private-dialog__btn_link {
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  margin: 0 auto;
  vertical-align: middle;
  background: #f9f900;
  border-radius: 10rpx;
}
